<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bledemo.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/find_ble_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查找设备"/>
        <Button
            android:id="@+id/connect_ble_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接设备"
            android:clickable="false"
            />
        <Button
            android:id="@+id/open_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始认证"
            android:clickable="false"/>
        <Button
            android:id="@+id/bind_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定设备"
            android:clickable="false"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout">
        <Button
            android:id="@+id/control_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始检测"
            android:clickable="false"/>
    </LinearLayout>



    <TextView
        android:id="@+id/device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1"
        android:text="TextView"/>

    <TextView
        android:id="@+id/connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/device_info"
        android:text="连接成功"/>

    <TextView
        android:id="@+id/notify_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/connect_status"
        android:layout_below="@+id/connect_status"
        android:text="认证成功"/>

    <TextView
        android:id="@+id/bind_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notify_status"
        android:text="绑定成功"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bind_status"
        android:text="TextView"/>

    <TextView
        android:id="@+id/work_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="TextView"/>

</RelativeLayout>
